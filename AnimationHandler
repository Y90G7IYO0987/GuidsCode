repeat task.wait(2.5) until game:GetService('Players').LocalPlayer.Character ~= nil

task.wait(.5)

local replicatedStorage = game:GetService('ReplicatedStorage')
local modules = replicatedStorage:WaitForChild('Modules')
local moduleUI = require(modules:WaitForChild('ModuleUI'))

local changingSize,baseSize = 1.3,1
local wait_ = .2
local cooldownTime = .3

local colorChangeButton = 'Red' -- цвет на который вы изменяете цвет кнопки.
local colorBaseButton = 'White' -- базовый цвет кнопки

local tableOfButtons = {
	script.Parent:WaitForChild('Animation1'),
}

for i, button in pairs(tableOfButtons) do 
	if button:IsA('TextButton') and button ~= nil then 
		button.MouseButton1Click:Connect(function()
			if button:FindFirstChild('Scale') then
				moduleUI.Animation1(button:FindFirstChild('Scale'),changingSize,baseSize,wait_,cooldownTime,colorChangeButton,button,colorBaseButton)
			end
		end)
	end
end
